@model Product

<h2 class="text-center">Create Product</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Product" asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Product Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description">Product Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price">Product Price</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Poster" class="pb-2 pt-2">Poster Image</label>
                    <input type="file" name="posterFile" class="form-control" />
                </div>


                <!-- If you have a Category dropdown list -->
                <div class="form-group">
                    <label asp-for="IdCategory" class="pb-2 pt-2">Category</label>
                    <select asp-for="IdCategory" asp-items="ViewBag.Categories" class="form-select">
                        <option disabled selected>-- Select a category --</option>
                    </select>
                </div>


                <button type="submit" class="btn btn-primary">Create Product</button>
            </form>
        </div>
    </div>
</div>
