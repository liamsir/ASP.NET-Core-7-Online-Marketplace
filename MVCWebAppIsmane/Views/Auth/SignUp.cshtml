    <!-- Use the card component to create a container for the register form -->
    <div class="card mx-auto" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title text-center">Register</h5>
            <form method="post" asp-controller="Auth" asp-action="Register">
                <!-- Use the form-group and form-control classes to style the input fields and labels -->
                <!-- Use the asp-for attribute to bind the input fields to the model properties -->
                <div class="form-group">
                    <label asp-for="Name">Name:</label>
                    <input type="text" class="form-control" asp-for="Name" required>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email">Email:</label>
                    <input type="email" class="form-control" asp-for="Email" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PasswordHash">Password:</label>
                    <input type="password" class="form-control" asp-for="PasswordHash" required>
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="City">City:</label>
                    <input type="text" class="form-control" asp-for="City" required>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="PhoneNumber">Phone:</label>
                    <input type="text" class="form-control" asp-for="PhoneNumber" required>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="roles">Choose Role:</label>
                    <select class="form-control" id="roles" name="UserRole" required>
                        <option value="Customer">Customer</option>
                        <option value="Admin">Admin</option>
                    </select>
                </div>
                <!-- Use the btn and btn-primary classes to style the button -->
                <button type="submit" class="btn btn-primary register">Register</button>
            </form>
            <!-- Use the text-center class to align the elements to the center -->
            <div class="text-center">
                <p>Already have an account? <a asp-controller="Auth" asp-action="SignIn">Sign in</a>.</p>
            </div>
        </div>
    </div>
</div>
