@model LoginVM

<style>
    

    /* .container {
        width: 400px;
        margin: 100px auto;
        border-radius: 20px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        background: white;
        padding: 40px;
    } */

    .logo {
        width: 100px;
        height: 100px;
        margin: 0 auto;
        display: block;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        font-weight: bold;
        color: #0072ff;
    }

    input {
        width: 100%;
        height: 40px;
        border: none;
        border-bottom: 2px solid #0072ff;
        outline: none;
        font-size: 18px;
    }

    .login {
        width: 100%;
        height: 50px;
        border: none;
        border-radius: 10px;
        background: #0072ff;
        color: white;
        font-size: 20px;
        font-weight: bold;
        cursor: pointer;
    }

    button:hover {
        background: #00c6ff;
    }
</style>



<!-- Add Bootstrap CDN links -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<div class="container">
    <img src="~/public/login.jpg" alt="Logo" class="logo">

    <!-- Display validation summary -->
    @if (ViewData.ModelState.ContainsKey(string.Empty))
    {
        <!-- Use the alert component with the alert-danger class -->
        <div class="alert alert-danger">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
    }

    <!-- Use the card component to create a container for the login form -->
    <div class="card mx-auto" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title text-center">Login</h5>
            <form method="post" asp-controller="Auth" asp-action="Login">

                <!-- Use the form-group and form-control classes to style the input fields and labels -->
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" name="Email" required>
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" class="form-control" id="password" name="Password" required>
                </div>

                <!-- Use the btn and btn-primary classes to style the button -->
                <button type="submit" class="btn btn-primary login">Login</button>
            </form>
            <!-- Use the text-center class to align the elements to the center -->
            <div class="text-center">
                <p>Don't have an account? <a asp-controller="Auth" asp-action="SignUp">Register</a>.</p>
            </div>
        </div>
    </div>
</div>
