@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
    <div class="row pt-4 pb-3">
        <div class="col-6"></div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus"></i>Add new category</a>
        </div>
    </div>     
    <table class="table table-bordered table-striped">
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        @foreach (var item in Model.OrderByDescending(u=> u.Id))
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-MyId="@item.Id" class="btn btn-primary mx-2" ><i class="bi bi-pencil-square"></i> Edit</a>
                        
                            <form asp-action="Delete" asp-route-DeletedCat="@item.Id" method="post">
                                <button class="btn btn-danger mx-2"><i class="bi bi-trash3"></i>Delete</button>
                            </form>
                    </div>
                </td>
            </tr>
        }
        </table>
    </div>
</div>

